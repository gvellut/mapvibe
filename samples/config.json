{
    "title": "Combe d'Ire",
    "version": 8,
    "center": [
        6.224185,
        45.728743
    ],
    "zoom": 12,
    "sources": {
        "osm-background": {
            "type": "raster",
            "tiles": [
                "https://a.tile.openstreetmap.org/{z}/{x}/{y}.png"
            ],
            "tileSize": 256,
            "attribution": "© OpenStreetMap contributors"
        },
        "ign-plan": {
            "type": "raster",
            "tiles": [
                "https://data.geopf.fr/wmts?&REQUEST=GetTile&SERVICE=WMTS&VERSION=1.0.0&STYLE=normal&TILEMATRIXSET=PM&FORMAT=image/png&LAYER=GEOGRAPHICALGRIDSYSTEMS.PLANIGNV2&TILEMATRIX={z}&TILEROW={y}&TILECOL={x}"
            ],
            "tileSize": 256,
            "attribution": "© IGN"
        },
        "ign-ortho": {
            "type": "raster",
            "tiles": [
                "https://data.geopf.fr/wmts?&REQUEST=GetTile&SERVICE=WMTS&VERSION=1.0.0&STYLE=normal&TILEMATRIXSET=PM&FORMAT=image/jpeg&LAYER=ORTHOIMAGERY.ORTHOPHOTOS&TILEMATRIX={z}&TILEROW={y}&TILECOL={x}"
            ],
            "tileSize": 256,
            "attribution": "© IGN"
        },
        "subway-stations": {
            "type": "geojson",
            "data": "samples/data/subway-stations.geojson"
        },
        "bike-routes": {
            "type": "geojson",
            "data": "samples/data/bike-routes.geojson"
        }
    },
    "layers": [
        {
            "id": "osm-background",
            "type": "raster",
            "source": "osm-background",
            "layout": {
                "visibility": "none"
            }
        },
        {
            "id": "ign-plan",
            "type": "raster",
            "source": "ign-plan",
            "layout": {
                "visibility": "visible"
            }
        },
        {
            "id": "ign-ortho",
            "type": "raster",
            "source": "ign-ortho",
            "layout": {
                "visibility": "none"
            }
        },
        {
            "id": "bike-routes-layer",
            "type": "line",
            "source": "bike-routes",
            "paint": {
                "line-color": "#088",
                "line-width": 3
            },
            "layout": {
                "visibility": "visible"
            }
        },
        {
            "id": "subway-stations-layer",
            "type": "symbol",
            "source": "subway-stations",
            "layout": {
                "icon-image": "peak",
                "icon-size": 0.8,
                "icon-allow-overlap": true,
                "visibility": "visible"
            }
        }
    ],
    "customImageResources": [
        {
            "id": "peak",
            "url": "assets/markers/mountain.png",
            "pixelRatio": 2
        }
    ],
    "customUi": {
        "panel": {
            "backgroundColor": "#f8f9fa",
            "width": "350px"
        },
        "controls": {
            "zoom": true,
            "scale": true,
            "layerChooser": true,
            "fullscreen": false,
            "attribution": true
        },
        "backgroundLayers": [
            {
                "id": "osm-background",
                "name": "Street Map"
            },
            {
                "id": "ign-plan",
                "name": "Plan IGN"
            },
            {
                "id": "ign-ortho",
                "name": "Aerial IGN"
            }
        ],
        "dataLayers": [
            {
                "id": "subway-stations-layer",
                "name": "Subway Stations",
                "interactive": true
            },
            {
                "id": "bike-routes-layer",
                "name": "Bike Routes",
                "interactive": false
            }
        ],
        "globalMinZoom": 5,
        "globalMaxZoom": 18
    }
}